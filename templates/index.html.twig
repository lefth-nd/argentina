{% extends 'base.html.twig' %}

{% block body %}
	<div>
		<h1 class="text-[2rem] font-bold tracking-tight text-slate-700">tech-human</h1>
		{% if app.user %}
			<h1 class="font-bold">logged in as:
				<span class="font-normal">{{app.user.userIdentifier}}</span>
			</h1>
			<div class="m-4"></div>
			<a href="{{path('app_logout')}}" class="bg-green-500 rounded-md text-white px-4 py-2 hover:bg-green-600 duration-300">logout</a>
			<div class="m-4"></div>
		{% else %}
			<div class="text-center">
				<div class="m-4"></div>
				<a class="bg-green-500 rounded-md text-white px-4 py-2 hover:bg-green-600 duration-300" href="{{path('app_login')}}">login</a>
				<a class="bg-green-500 rounded-md text-white px-4 py-2 hover:bg-green-600 duration-300" href="{{path('app_register')}}">register</a>
			</div>
		{% endif %}
	</div>
{% endblock %}
